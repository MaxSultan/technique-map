{
  "name": "design-system",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "design-system/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "outputs": [
        "{projectRoot}/{options.outDir}",
        "{workspaceRoot}/dist/design-system"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outDir": "../dist/design-system"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "storybook": {
      "options": {
        "port": 4400,
        "config-dir": ".storybook"
      },
      "configurations": {
        "ci": {
          "args": ["--quiet"]
        }
      }
    },
    "build-storybook": {
      "outputs": [
        "{projectRoot}/{options.output-dir}",
        "{workspaceRoot}/{projectRoot}/storybook-static",
        "{options.output-dir}",
        "{options.outputDir}",
        "{options.o}"
      ],
      "options": {
        "config-dir": ".storybook",
        "output-dir": "../dist/storybook/design-system"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "design-system:build-storybook",
        "staticFilePath": "dist/storybook/design-system"
      },
      "configurations": {
        "ci": {
          "buildTarget": "design-system:build-storybook:ci"
        }
      }
    }
  }
}
